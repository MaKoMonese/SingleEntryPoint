<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rx way"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_rx_fragment1"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:text="Open fragment#1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_rx_fragment2"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:text="Open fragment#2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_rx_fragment1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_rx_fragment3"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:text="Open fragment#3"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_rx_fragment2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Coroutine way"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_rx_fragment3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_coroutine_fragment1"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:text="Open fragment#1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_coroutine_fragment2"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:text="Open fragment#2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_coroutine_fragment1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_coroutine_fragment3"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:text="Open fragment#3"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_coroutine_fragment2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
